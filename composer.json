{
    "name": "randomhost/image",
    "type": "library",
    "description": "Encapsulates common GD library operations in PHP classes.",
    "keywords": [
        "Image"
    ],
    "homepage": "https://github.random-host.tv",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ch'Ih-Yu",
            "email": "chi-yu@web.de"
        }
    ],
    "config": {
        "platform": {
            "php": "8.2.7"
        }
    },
    "require": {
        "php": "~8.0",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0"
    },
    "autoload": {
        "psr-4": {
            "randomhost\\Image\\": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "randomhost\\Image\\Tests\\": "src/tests/php"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
